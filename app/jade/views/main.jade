div(ng-cloak="")
    .row.user-menu-container.square.darkbg  
        .col-md-12.user-details
            .row.darkbg.white
                .col-md-3.no-pad
                    .user-image
                        img.img-responsive.thumbnail(src="img/profilepic.jpg")
                .col-md-9.no-pad
                    .user-pad
                        h3 Hello, {{user.name}}
                        h4 #[span.glyphicon.glyphicon-scale] {{user.weight + 'Kg'}}
                        h4 #[span.glyphicon.glyphicon-question-sign] {{user.bodyFat + '% gordura corporal'}}
                        button.btn.btn-labeled.btn-info.square
                            span.btn-label #[span.glyphicon.glyphicon-pencil] Atualizar


            .row.overview
                h2 Posição atual
            .row.overview
                .col-md-3.user-pad.text-center
                    h3 Programado
                    h4 Diario: {{totalMetabolicRate + 'KCal'}}
                    h4 Semanal: {{totalWeeklyMetabolicRate + 'KCal'}}
                .col-md-3.user-pad.text-center
                    h3 Ingerido
                    h4 Diario: {{suggestedDailyCals + 'KCal'}}
                    h4 Semanal: {{suggestedWeeklyCals + 'KCal'}}
                .col-md-3.user-pad.text-center
                    h3 Gasto
                    h4 Diario: {{actualDailyCals + 'KCal'}}
                    h4 Semanal: {{actualWeeklyCals + 'KCal'}}
                .col-md-3.user-pad.text-center
                    h3 Resultado
                    h4 Diario: {{actualDailyCals + 'KCal'}}
                    h4 Semanal: {{actualWeeklyCals + 'KCal'}}


    article.row.user-menu-container.square
        .row.overview
            h2 Periodização do treino
        .row.overview
            .col-md-3.text-center
                h3 Cardio
                .input-group.space-bottom
                    input.form-control(
                        type="number"
                        name="cardioPercent"
                        ng-model="periodization.cardioPercent"
                        min=0
                        max=100)
                    span.input-group-addon.keep-border %
                h4 KCal
                h4 Min
            .col-md-3.text-center
                h3 Força
                .input-group.space-bottom
                    input.form-control(
                        type="number"
                        name="strengthPercent"
                        ng-model="periodization.strengthPercent"
                        min=0
                        max=100)
                    span.input-group-addon.keep-border %
                h4 KCal
                h4 Min